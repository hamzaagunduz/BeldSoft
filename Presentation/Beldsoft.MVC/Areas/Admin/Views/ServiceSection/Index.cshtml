@model List<ServiceSectionGetAllViewModel>

<div class="card">
    <div class="card-header">
        <div class="row align-items-center">
            <div class="col">
                <h4 class="card-title">Service Sections</h4>
            </div><!--end col-->
            <div class="col-auto">
                <a href="/admin/servicesection/create" class="btn bg-primary text-white">
                    <i class="fas fa-plus me-1"></i> Yeni Service Section
                </a>
            </div><!--end col-->
        </div><!--end row-->
    </div><!--end card-header-->

    <div class="card-body pt-0">
        <div class="table-responsive">
            <table class="table mb-0 datatable-table">
                <thead>
                    <tr>
                        <th style="width: 20%;"><button class="datatable-sorter">Title</button></th>
                        <th style="width: 25%;"><button class="datatable-sorter">Description</button></th>
                        <th style="width: 20%;"><button class="datatable-sorter">Icon URL</button></th>
                        <th style="width: 20%;"><button class="datatable-sorter">Image</button></th>
                        <th class="text-end" style="width: 15%;"><button class="datatable-sorter">Action</button></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var service in Model)
                        {
                            <tr>
                                <td>@service.Title</td>
                                <td>@service.Description</td>
                                <td>@service.IconUrl</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(service.ImageUrl))
                                    {
                                        <img src="@service.ImageUrl" alt="@service.Title" style="max-height:50px;" />
                                    }
                                </td>
                                <td class="text-end">
                                    <a asp-action="Edit" asp-route-id="@service.Id" class="me-2">
                                        <i class="las la-pen text-secondary fs-18"></i>
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@service.Id" method="post" style="display:inline;"
                                          onsubmit="return confirm('Silmek istediğine emin misin?');">
                                        <button type="submit" class="btn btn-link p-0 m-0">
                                            <i class="las la-trash-alt text-secondary fs-18"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted">No service sections found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div><!--end table-responsive-->
    </div><!--end card-body-->
</div><!--end card-->
