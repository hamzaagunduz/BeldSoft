@model ServiceSectionCreateViewModel

<div class="card">
    <div class="card-body">
        <form asp-action="Create" method="post" enctype="multipart/form-data">

            <div class="row">
                <div class="col-md-12">
                    <div class="mb-3">
                        <label asp-for="Title" class="form-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter Description"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="mb-3">
                        <label asp-for="IconUrl" class="form-label"></label>
                        <input asp-for="IconUrl" class="form-control" placeholder="Enter icon text" />
                        <small class="form-text text-muted">Örnek ikon adları: service-icon-1-1, service-icon-1-2, service-icon-1-3</small>

                        <span asp-validation-for="IconUrl" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="mb-3">
                        <label asp-for="Image" class="form-label">Image</label>
                        <input asp-for="Image" type="file" class="form-control" />
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12 text-start">
                    <button type="submit" class="btn btn-primary px-4">Create</button>
                    <a asp-action="Index" class="btn btn-secondary px-4 ms-2">Cancel</a>
                </div>
            </div>

        </form>
    </div>
</div>
