@model List<SessionSectionGetAllViewModel>

<div class="card">
    <div class="card-header">
        <div class="row align-items-center">
            <div class="col">
                <h4 class="card-title">Session Sections</h4>
            </div>
        </div>
    </div>

    <div class="card-body pt-0">
        <div class="table-responsive">
            <table class="table mb-0 datatable-table">
                <thead>
                    <tr>
                        <th style="width: 20%;"><button class="datatable-sorter">Main Title</button></th>
                        <th style="width: 20%;"><button class="datatable-sorter">Sub Title</button></th>
                        <th style="width: 40%;"><button class="datatable-sorter">Sessions</button></th>
                        <th class="text-end" style="width: 20%;"><button class="datatable-sorter">Action</button></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var session in Model)
                        {
                            <tr>
                                <td>@session.MainTitle</td>
                                <td>@session.SubTitle</td>
                                <td>
                                    <ul class="list-unstyled mb-0">
                                        <li><b>@session.Title1</b> - @session.Time1 <i>@session.IconUrl1</i></li>
                                        <li><b>@session.Title2</b> - @session.Time2 <i>@session.IconUrl2</i></li>
                                        <li><b>@session.Title3</b> - @session.Time3 <i>@session.IconUrl3</i></li>
                                        <li><b>@session.Title4</b> - @session.Time4 <i>@session.IconUrl4</i></li>
                                    </ul>
                                </td>
                                <td class="text-end">
                                    <a asp-action="Edit" asp-route-id="@session.Id" class="me-2">
                                        <i class="las la-pen text-secondary fs-18"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted">No session sections found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
