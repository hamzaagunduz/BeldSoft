@model SiteSettingsGetAllViewModel

<div class="vs-footer bg-title">
    <div class="vs-footer__top z-index-common space-extra-top space-extra-bottom">

        <div class="vs-balls vs-balls--screen" data-balls-top="-6px" data-balls-color="#ffffff"></div>
        <div class="container">
            <div class="row gy-4 gx-xxl-5">
                <div class="col-lg-4 col-md-6 wow animate__fadeInUp" data-wow-delay="0.25s">
                    <div class="vs-footer__widget">
                        <div class="vs-footer__logo text-center text-md-start mb-25">
                            <a href="/" class="vs-footer__logo-link">
                                <img src="@( Model.LogoUrl)" alt="@Model.SiteName" />
                            </a>
                        </div>
                        <p class="vs-footer__desc text-center text-md-start">
                            @Model.SiteName sitesine hoş geldiniz.
                        </p>
                        <div class="icon-call justify-content-center justify-content-md-start pt-10 mb-10">
                            <span class="icon-call__icon"><i class="fa-solid fa-phone-rotary"></i></span>
                            <div class="icon-call__content">
                                <span class="icon-call__title">Destek Hattı</span>
                                <a href="tel:@Model.SupportPhone" class="icon-call__number">@Model.SupportPhone</a>
                            </div>
                        </div>
                        <div class="social-style social-style--version2 w-100 justify-content-center justify-content-md-start pt-25">
                            <span class="social-style__label">Bizi Takip Edin :</span>
                            @if (!string.IsNullOrEmpty(Model.FacebookUrl))
                            {
                                <a href="@Model.FacebookUrl"><i class="fab fa-facebook-f"></i></a>
                            }
                            @if (!string.IsNullOrEmpty(Model.LinkedinUrl))
                            {
                                <a href="@Model.LinkedinUrl"><i class="fab fa-linkedin-in"></i></a>
                            }
                            @if (!string.IsNullOrEmpty(Model.YoutubeUrl))
                            {
                                <a href="@Model.YoutubeUrl"><i class="fab fa-youtube"></i></a>
                            }
                            @if (!string.IsNullOrEmpty(Model.InstagramUrl))
                            {
                                <a href="@Model.InstagramUrl"><i class="fab fa-instagram"></i></a>
                            }
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6 wow animate__fadeInUp" data-wow-delay="0.35s">
                    <div class="vs-footer__widget">
                        <h3 class="vs-footer__title">Sayfalar</h3>
                        <div class="vs-footer__menu">
                            <ul class="vs-footer__menu--list">
                                <li><a href="/">Anasayfa</a></li>
                                <li><a href="@Model.ContactPageUrl">İletişim</a></li>
                                <li><a href="@Model.ParentQueryPageUrl">Veli Sorgu</a></li>
                                <li><a href="@Model.TermsUrl">Şartlar ve Koşullar</a></li>
                                <li><a href="@Model.PrivacyPolicyUrl">Gizlilik Politikası</a></li>
                            </ul>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="vs-footer__bottom bg-theme-color-1">
        <div class="container">
            <div class="row gy-3 gx-5 align-items-center justify-content-center justify-content-lg-between flex-column-reverse flex-lg-row">
                <div class="col-md-auto">
                    <p class="vs-footer__copyright mb-0">
                        @Html.Raw((Model.CopyrightText ?? $"&copy; {DateTime.Now.Year} {Model.SiteName}. Tüm hakları saklıdır."))
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
