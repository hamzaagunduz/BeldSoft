@model Beldsoft.MVC.ViewModels.SiteSettings.SiteSettingsGetAllViewModel

<div class="sidemenu-wrapper">
    <div class="sidemenu-content">
        <div class="sidemenu-logo sidemenu-item">
            <a href="/">
                @if (!string.IsNullOrEmpty(Model.LogoUrl))
                {
                    <img src="@Model.LogoUrl" alt="@Model.SiteName" class="logo" />
                }
                else
                {
                    <img src="~/toddly/assets/img/logo-white.svg" alt="logo" class="logo" />
                }
            </a>
            <button class="closeButton sideMenuCls">X</button>
        </div>
        <hr class="sidemenu-hr sidemenu-item">
        <div class="sidemenu-inner">
            <div class="sidemenu-body">
                <p class="sidemenu-item text-white mb-30">
                    Tüm yaş gruplarındaki çocuklar için eğitim ve oyun hizmetlerimizi sürekli geliştiriyoruz.
                </p>

                <h4 class="sidemenu-subtitle sidemenu-item">İLETİŞİM</h4>
                <div class="sidemenu-contact">
                    <ul>
                        @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                        {
                            <li class="sidemenu-item">
                                <a href="tel:@Model.PhoneNumber" class="sidemenu-link">@Model.PhoneNumber</a>
                            </li>
                        }
                        @if (!string.IsNullOrEmpty(Model.Email))
                        {
                            <li class="sidemenu-item">
                                <a href="mailto:@Model.Email" class="sidemenu-link">@Model.Email</a>
                            </li>
                        }
                        @if (!string.IsNullOrEmpty(Model.Address))
                        {
                            <li class="sidemenu-item">
                                <span>@Model.Address</span>
                            </li>
                        }
                    </ul>
                </div>
            </div>

            <div class="sidemenu-footer">
                <hr class="sidemenu-hr sidemenu-item">
                <div class="footer-social sidemenu-item">
                    <span>Bizi takip edin :</span>
                    @if (!string.IsNullOrEmpty(Model.FacebookUrl))
                    {
                        <a href="@Model.FacebookUrl" target="_blank"><i class="fab fa-facebook-f"></i></a>
                    }
                    @if (!string.IsNullOrEmpty(Model.YoutubeUrl))
                    {
                        <a href="@Model.YoutubeUrl" target="_blank"><i class="fab fa-youtube"></i></a>
                    }
                    @if (!string.IsNullOrEmpty(Model.InstagramUrl))
                    {
                        <a href="@Model.InstagramUrl" target="_blank"><i class="fab fa-instagram"></i></a>
                    }
                    @if (!string.IsNullOrEmpty(Model.LinkedinUrl))
                    {
                        <a href="@Model.LinkedinUrl" target="_blank"><i class="fab fa-linkedin-in"></i></a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
